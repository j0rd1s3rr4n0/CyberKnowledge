import java.util.Scanner;
public class Exercici04 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*
		 * . Introduir 4 números i dir si la suma dels dos primers és més gran, igual o més petit que la
		 * suma dels 2 següents.
		 */
		Scanner input = new Scanner(System.in);
		double valor1,valor2,valor3,valor4;
		System.out.print("1r Numero: ");
		valor1 = input.nextDouble();
		System.out.print("2n Numero: ");
		valor2 = input.nextDouble();
		System.out.print("3r Numero: ");
		valor3 = input.nextDouble();
		System.out.print("4t Numero: ");
		valor4 = input.nextDouble();
		if((valor1+valor2) > (valor3+valor4)) {
			System.out.println(valor1+" + "+valor2+" es major a "+valor3+" + "+valor4);
		}
		else {
			if((valor1+valor2) < (valor3+valor4)) {
				System.out.println("Resultat:\n"+valor1+" + "+valor2+" es menor a "+valor3+" + "+valor4);
			}
			else((valor1+valor2) = (valor3+valor4)) {
				System.out.println("Resultat:\n"+valor1+" + "+valor2+" es menor a "+valor3+" + "+valor4);
			}
		}
		
	}

}

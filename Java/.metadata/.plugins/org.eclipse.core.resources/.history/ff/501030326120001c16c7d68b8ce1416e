import java.util.Scanner;


public class Exercici16 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// Volem fer un programa que ens serveixi per fer truites de patates per a N persones. Per fer-ho, a
		// l’inici del programa ens preguntarà per quantes persones la volem. Per calcular-ho haurem de
		// seguir les dades que trobem a internet relatives als ingredients per fer una truita per a 4 persones

		double huevos,patatas,cebolla,aceite,n;
		String sal;

		Scanner e = new Scanner(System.in);

		System.out.print("Per a quantes persones es la truita: ");
		n = e.nextDouble();
		huevos = Math.round((400/4)*n);
		patatas = Math.round((500/4)*n);
		cebolla = Math.round((1/4)*n+0.5);
		sal = "Una pizca de sal";
		aceite = Math.round((2/4)*n);

		// 5 huevos
		// 500 g de patatas
		// 1 cebolla
		// Sal
		// 2 cucharadas de aceite de oliva virgen extra
		System.out.println("Ingredientes:\n - "+
		huevos+" Huevos\n - "+
		patatas+"g de Patatas\n - "+
		cebolla+" quarto/s de cebolla.\n - "+
		sal+"\n - "+
		aceite+" Cucharadas de aceite");
		e.close();
	}

}

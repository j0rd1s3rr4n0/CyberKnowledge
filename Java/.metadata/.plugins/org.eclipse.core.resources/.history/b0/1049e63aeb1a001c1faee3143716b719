package exemple_suma;

public class exemplesuma {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		/*Declaració
		 * [TIPUS VAIABLE] NOm_Variable;
		 *Assignació
		 *Nom:variable=valor;
		 *valor serà un element del domini del tipus que definim
		 *
		 *Agada nombre naturals des del -99000 fina el 99000
		 *
		 *Operacions que podem fer amb Integers:
		 *	Aritmètiques: +,-,/,*,% (RESIDU)
		 *Lòguiques: >, >=, <=,
		 *== (Igual)
		 *!= (Diferent)
		 *El resultat de les operacions lògiques son Veritat o Mentida (TRUE, FALSE)
		 */

		//Declara una variable (Li dic al computer que farem servir 2 variables del tipus Enter
		int valor_1;
		int valor_2;
		int resultat;
		String missatgeResultat;
		
		//Inicialitzar els valors de variables
		valor_1=0;
		valor_2=0;
		resultat=0;
		missatgeResultat = "El resultat es: ";
		
		//fer l'operacio, en aquest cas la suma
		valor_1=8;
		valor_2=7;
		
		resultat = valor_1 + valor_2;
		
		System.out.print(missatgeResultat+resultat);
	}
}

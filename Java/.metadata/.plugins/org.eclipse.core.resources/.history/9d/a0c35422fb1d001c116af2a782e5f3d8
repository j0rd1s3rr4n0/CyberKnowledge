import java.util.Scanner;
public class Exercici03 {

	public static void main(String[] args) {
	Scanner c = new Scanner(System.in);
	double importe,descuento,preudescomptat;
	descuento = 20;
	importe = 10;
	
	System.out.print("Import: ");
	importe = c.next()
	System.out.print("Descompte: ");
	
	preudescomptat = importe * ( descuento / 100);
	
	System.out.print("Preu Descomptat: "+preudescomptat);
	
	
	}

}

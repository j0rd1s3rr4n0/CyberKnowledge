			/*
			* Elaborar un programa que determini en una variable MIN el més petit dels valors de 4
			* variables A,B,C,D
			*/
			double min,a,b,c,d;
			a = 3.0;
			b = 2.0;
			c = 1.0;
			min = 0;
			Scanner input = new Scanner(System.in);
			if (a < b && a < c && a < d) {
				min = a;
			}
			else{
				if (b < c && b < a &&){
					min=b;}
				else {
					if (c < a && c < b){
						min=c;	}
					else {System.out.println("Un o mes valors son iguals");}
				}
				if (min != 0) {
					System.out.println("Valor minim: "+min);
				}
			}
			
		}


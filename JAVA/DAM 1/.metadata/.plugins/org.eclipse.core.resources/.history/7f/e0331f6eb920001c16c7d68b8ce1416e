import java.util.Scanner;
public class Exercici09 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*
		 * Fer un algorisme que serveixi tant per calcular l’àrea d’un rectangle com el perímetre d’un
		 * rectangle. Se li demanarà a l’usuari el valor dels dos costats i quina operació vol realitzar
		 * (Aàrea i P-perímetre) mostrant el resultat segons l’opció indicada per l’usuari.
		 */
		char opc;
		String entrada;
		double b,h,area,perim;
		Scanner write = new Scanner(System.in);
		System.out.print("Que vol calcular?\nA - Area\nP - Perimetre\nP\\A: ");
		entrada = write.next();
		if (entrada.length()==1) {
			opc = entrada.charAt(0);
			
			System.out.print("Base: ");
			b = write.nextDouble();
			System.out.print("Altura: ");
			h = write.nextDouble();
			
			if(opc == 'a' || opc == 'A') {
				// area = b * h;
				area = b *h;
			}
			else if(opc == 'p' || opc == 'P') {
				// perim = b*2 + h*2;
				perim = b*2 + h*2;
				System.out.println("Perimetre = "+perim);
			}
		}
		
		

		
		
	}

}

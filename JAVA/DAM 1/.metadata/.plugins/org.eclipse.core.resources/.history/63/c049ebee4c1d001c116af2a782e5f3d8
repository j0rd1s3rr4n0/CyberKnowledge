import java.util.Scanner;
public class Exercici01 {
	
	public static void main(String[] args) {
	
		final double PI = 3.1415; // final = CONSTANT
		double RADIO; //floats
		double AREA;
		System.out.print("Inserte un Numero: ")
		Scanner e = new Scanner(System.in);
		RADIO = e.nextInt();
		AREA = PI * RADIO ** 2
		
	}
}
